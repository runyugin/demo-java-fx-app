<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>


<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="ru.gb.demojavafxapp.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <TextArea fx:id="historyArea" editable="false" VBox.vgrow="ALWAYS" />

    <HBox spacing="20">

        <TextField fx:id="userAnswer" HBox.hgrow="ALWAYS"/>
        <Button text="Отправить" defaultButton="true" onAction="#clickChekButton"/>
    </HBox>
</VBox>
